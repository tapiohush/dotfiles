screen    -t main 0
select 0
bindkey "^[a" prev
bindkey "^[d" next

startup_message off
vbell off
nethack on
zombie cr

# F8 to turn the status bar off
bindkey -k k8 hardstatus alwayslastline
# F9 to turn the status bar on
bindkey -k k9 hardstatus alwaysignore
# F5 and F6 to move one screen forward or backward
#hardstatus string "%{.kc}%-w%{.kw}%n*%t%{-}%+w %= | %1` | %2`C | %3`/%4` | %5`% | %6`/%7` | %c %d/%m/%Y"
#hardstatus alwayslastline '%{= c} %H%{= c} %l %= %{= w}%-w%{+b r}%n*%t%{-b r}%{w}%+w %= %{c}%d %D %{B}%c '
hardstatus alwayslastline '%{= c} %H%{= c} %l %= %{= c}%-w%{+b B}%n*%t%{-b r}%{c}%+w %= %{c}%d %D %{B}%c '
